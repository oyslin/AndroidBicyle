<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <com.dreamcatcher.bicycle.view.ActivityTitle
        android:id="@+id/bicycle_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >
    </com.dreamcatcher.bicycle.view.ActivityTitle>

    <ListView
        android:id="@+id/bicycle_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bicycle_title"
        android:background="@drawable/activity_bg"
        android:cacheColorHint="@color/transparent"
        android:clickable="true"
        android:divider="@drawable/setting_listview_divider"
        android:dividerHeight="@dimen/select_city_listview_divider"
        android:fastScrollEnabled="true"
        android:focusable="false"
        android:smoothScrollbar="true" 
        android:listSelector="@drawable/listview_selector">
    </ListView>

</RelativeLayout>