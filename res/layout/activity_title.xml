<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_title_height" 
    android:background="@drawable/activity_title_bg">
    <TextView
        android:id="@+id/activity_title_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"        
        android:textAppearance="@style/Bicycle.TextAppearance.WhiteLargeBold" android:text="Title">       
    </TextView>
	
    <ImageView 
        android:id="@+id/activity_title_right_image"
        android:layout_width="@dimen/activity_title_image_width"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true" 
        android:scaleType="fitCenter" 
        android:layout_marginRight="1dip" 
        
        android:visibility="gone" android:layout_marginTop="1dip"/>
</RelativeLayout>