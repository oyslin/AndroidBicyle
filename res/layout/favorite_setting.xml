<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <com.dreamcather.bicycle.view.ActivityTitle
        android:id="@+id/bicycle_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >
    </com.dreamcather.bicycle.view.ActivityTitle>

    <ListView
        android:id="@+id/favorite_setting_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bicycle_title" android:background="@drawable/activity_bg" android:cacheColorHint="@color/transparent" android:divider="@drawable/setting_listview_divider" android:dividerHeight="@dimen/select_city_listview_divider" android:listSelector="@drawable/listview_selector" android:fastScrollEnabled="true">
    </ListView>

</RelativeLayout>